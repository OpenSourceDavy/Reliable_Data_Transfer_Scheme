   "source": [
    "import re\n",
    "\n",
    "# this captures sequences of alphabetic characters\n",
    "# possibily followed by an apostrophe and more characters\n",
    "# n.b. (?:...) denotes a non-capturing group\n",
    "def simple_tokenize(s):\n",
    "    return re.findall(r\"[a-z]+(?:'[a-z]+)?\",s.lower())"
   ]
  }
